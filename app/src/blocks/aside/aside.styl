name = aside

.{name}
	position: fixed
	top: 0
	right: -250px
	bottom: 0
	width: 250px
	max-width: 67%
	background: color-dark
	padding: 12rem 0 0
	transition: (duration / 2) ease
	z-index: 30

	&__list
		list-style-type: none
		padding: 0
		margin: 0
		overflow: auto
		height: 100%
		display: flex
		flex-direction: column

	&_opened
		box-shadow: 0 0 2px 2px color-dark

		.{name}

			&__link

				&::after
					transform: rotate(180deg)

	&__item

		&_modal
			margin: auto 15px 15px

	&__link
		padding: .5em 2em
		border-bottom: none;
		display: block
		font-size: 2rem
		font-weight: 400
		color: white

	&__btn
		width: 100%
		margin-top: 15px

	&_opened
		right: 0
		transition: duration ease