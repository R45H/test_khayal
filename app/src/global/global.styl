*,
*::before,
*::after
	box-sizing: border-box

html
	height 100%
	font-size 7px

	+point(sm)
		font-size 8px

	+point(md)
		font-size 9px

	+point(lg)
		font-size 10px

body
	height 100%
	font-size 1.6rem
	font-family font-main
	color color-text
	line-height 1.5

	&.noscroll
		overflow hidden

input,
textarea
	//-webkit-appearance none
	//border-radius 0

	&:hover,
	&:focus,
	&:active
		outline none

textarea
	resize none

hr
	margin 0

img
	max-width 100%

h1,
h2,
h3,
h4,
h5,
h6,
p,
ul,
li
	margin: 0
	padding: 0

::selection
	color auto