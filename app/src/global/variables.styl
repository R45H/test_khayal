// Брейкпоинты
media_min = {
  sm : '(min-width: 576px)',
  md : '(min-width: 768px)',
  lg : '(min-width: 992px)',
  xl : '(min-width: 1200px)',
}
media_max = {
  sm : '(max-width: 575x)',
  md : '(max-width: 767px)',
  lg : '(max-width: 991px)',
  xl : '(max-width: 1199px)',
}

point(breakpoints, direct = 'min')
	conditions = ()
	for point in breakpoints
		if direct == min
			push(conditions, media_min[point])
		else
			push(conditions, media_max[point])
	conditions = join(", ", conditions)
	@media conditions
		{block}
